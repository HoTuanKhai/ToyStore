<div class="mt-4">
    <div class="row">
        <style type="text/css" >
            div{
                background-image:url(https://wallpapers.com/images/featured/g8t326jpw36da9ib.jpg);
            }   
        </style>
        {{#each gundams}}
        <div class="col-md-2 col-md-4">


            <div class="card-gundam-item">
                <a href="/gundams/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/gundams/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <h3 class="card-text">{{this.price}}</h3>
                    <a href="/gundams/{{this.slug}}" class="btn btn-primary">Show gundam detail</a>
                </div>
            </div>
        </div>
        {{/each}}

        

    </div>
</div>